
IMGNAME=a.img
IMGSIZE=30
LOGFILE=qemu.log
ADMINPW=r

create-adminpw:
	openssl passwd -salt RH $(ADMINPW)

run-iso-in-qemu: create-adminpw
	[[ "x$(iso)" != "x" ]]
	rm -vf "$(IMGNAME)"
	qemu-img create -f qcow2 "$(IMGNAME)" $(IMGSIZE)G
	qemu-kvm -serial stdio -m 2048 -hda "$(IMGNAME)" -cdrom "$(iso)" | tee $(LOGFILE)
	rm -vf "$(IMGNAME)"

